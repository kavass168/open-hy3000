CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000-emmc=y

# Switch / DSA
CONFIG_PACKAGE_kmod-dsa=y
CONFIG_PACKAGE_kmod-dsa-mt7530=y
CONFIG_PACKAGE_kmod-mt7531=y

# Luci switch page
CONFIG_PACKAGE_luci-app-switch=y

# Basic PHY support
CONFIG_PACKAGE_kmod-mii=y
CONFIG_PACKAGE_kmod-phy-realtek=y
CONFIG_PACKAGE_kmod-phy-broadcom=y

# WiFi（MT7981 内置 WiFi）
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_luci-app-wireless-regdb=y

# WAN（PPPoE）
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_luci-proto-pppoe=y

# 防火墙 / NAT
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_luci-app-firewall=y

# Luci 基础界面
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
